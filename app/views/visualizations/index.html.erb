<div class="row">
    <div class="col-md-6">
      <h2 class="h2">Subject phone brands</h2>
      <%= pie_chart Subject.group(:brand).count %>
    </div>
    <div class="col-md-6">
      <h2 class="h2">Average image size in a collection</h2>
      <%= column_chart Image.group(:image_collection).average(:size) %>
    </div>
</div>


<div class="row">
    <div class="col-md-6">
      <h2 class="h2">Images taken on a date</h2>
      <%= line_chart Image.group(:date_taken).count %>
    </div>
    <div class="col-md-6">
      <h2 class="h2">Image collections per subject</h2>
      <%= bar_chart ImageCollection.group(:subject).count %>
    </div>
</div>