      <th>Is podcast</th>
      <th>Is ringtone</th>
      <th>Time</th>
      <th>Duration</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @collection.audios.each do |audio| %>
      <tr>
        <td><%= audio.date %></td>
        <td><%= audio.collection_id %></td>
        <td><%= audio.album %></td>
        <td><%= audio.artist %></td>
        <td><%= audio.composer %></td>
