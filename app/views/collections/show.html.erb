<p id="notice"><%= notice %></p>

<p> <%= link_to "Subject #{@collection.subject_id}", @collection.subject %></p>

<h3> Images </h3>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Collection date</th>
      <th>Size</th>
      <th>Date modified</th>
      <th>Date added</th>
      <th>Date taken</th>
      <th>Is private</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @collection.images.each do |image| %>
      <tr>
        <td><%= image.date %></td>
        <td><%= image.size %></td>
        <td><%= image.date_modified %></td>
        <td><%= image.date_added %></td>
        <td><%= image.date_taken %></td>
        <td><%= image.is_private %></td>
        <td><%= image.latitude %></td>
        <td><%= image.longitude %></td>
        <td><%= link_to 'Show', image %></td>
      </tr>
    <% end %>
</tbody>
</table>

<h3> Applications </h3>
<table class="table table-condensed table-hover">
  <thead>
  <tr>
    <th>Collection date</th>
    <th>Label</th>
    <th>Package name</th>
    <th>First installed</th>
    <th>Version name</th>
    <th>Target SDK version</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @collection.applications.each do |application| %>
      <tr>
        <td><%= application.date %></td>
        <td><%= application.label %></td>
        <td><%= application.package_name %></td>
        <td><%= application.first_installed %></td>
        <td><%= application.version_name %></td>
        <td><%= application.target_sdk_version %></td>
        <td><%= link_to 'Show', application %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h3>Text files</h3>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Size</th>
      <th>Date modified</th>
      <th>Date added</th>
      <th>Mime type</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @collection.texts.each do |text| %>
      <tr>
        <td><%= text.date %></td>
        <td><%= text.size %></td>
        <td><%= text.date_modified %></td>
        <td><%= text.date_added %></td>
        <td><%= text.mime_type %></td>
        <td><%= link_to 'Show', text %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_collection_path(@collection) %> |
