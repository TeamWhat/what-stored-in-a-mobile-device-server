<h1>Listing image_collections</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_collections.each do |image_collection| %>
      <tr>
        <td><%= image_collection.subject_id %></td>
        <td><%= link_to 'Show', image_collection %></td>
        <td><%= link_to 'Edit', edit_image_collection_path(image_collection) %></td>
        <td><%= link_to 'Destroy', image_collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

