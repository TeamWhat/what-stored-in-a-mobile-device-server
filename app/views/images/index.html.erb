<h1>Listing images</h1>
<h4 class="h4">Total number of images: <%= @image_count %></h4>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Size</th>
      <th>Date modified</th>
      <th>Date added</th>
      <th>Date taken</th>
      <th>Is private</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.date %></td>
        <td><%= image.size %></td>
        <td><%= image.date_modified %></td>
        <td><%= image.date_added %></td>
        <td><%= image.date_taken %></td>
        <td><%= image.is_private %></td>
        <td><%= image.latitude %></td>
        <td><%= image.longitude %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path %>

<p>
  Download:
  <%= link_to "CSV", images_path(format: "csv") %> |
  <%= link_to "Excel", images_path(format: "xls") %>
</p>
