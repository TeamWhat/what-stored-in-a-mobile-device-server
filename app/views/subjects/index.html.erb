<h1>Listing subjects</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Device</th>
      <th>Product</th>
      <th>Serial</th>
      <th>Uid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.date %></td>
        <td><%= subject.brand %></td>
        <td><%= subject.model %></td>
        <td><%= subject.device %></td>
        <td><%= subject.product %></td>
        <td><%= subject.serial %></td>
        <td><%= subject.uid %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

