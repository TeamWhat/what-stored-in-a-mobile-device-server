<h1>Listing text files</h1>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Size</th>
      <th>Date modified</th>
      <th>Date added</th>
      <th>Mime type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @texts.each do |text| %>
      <tr>
        <td><%= text.date %></td>
        <td><%= text.size %></td>
        <td><%= text.date_modified %></td>
        <td><%= text.date_added %></td>
        <td><%= text.mime_type %></td>
        <td><%= link_to 'Show', text %></td>
        <td><%= link_to 'Edit', edit_text_path(text) %></td>
        <td><%= link_to 'Destroy', text, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

